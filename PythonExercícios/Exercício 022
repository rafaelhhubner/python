nome = str(input('Digite aqui o seu nome COMPLETO: ')).strip()
dividir = nome.split
nomi = len(nome) - nome.count(' ')
nomo = nome.find(' ')
print(f'O nome com todas as letras maiúsculas: {nome.upper()}')
print(f'O nome com todas as letras minúsuclas: {nome.lower()}')
print(f'O nome tem {nomi} letras, desconsiderando espaços')
print(f'O primeiro nome tem {nomo} letras.')