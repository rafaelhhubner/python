resposta = str(input('Você é do sexo Masculino ou Feminino? [M/F]? ')).strip().upper()[0]
while resposta not in 'MF':
    print('Por favor, digite \033[1;34mM\033[m para masculino ou \033[1;35mF\033[m para feminino')
    resposta = str(input('Você é do sexo Masculino ou Feminino? [M/F]? ')).strip().upper()[0]
if resposta == ('M'):
    print('Olá, senhor!')
if resposta == ('F'):
    print('Olá, senhora!')
