r1 = float(input('Digite o comprimento da 1° reta: '))
r2 = float(input('Digite o comprimento da 2° reta: '))
r3 = float(input('Digite o comprimento da 3° reta: '))
s1 = r1 + r2
s2 = r2 + r3
s3 = r3 + r1
if s1 > r3 and s2 > r1 and s3 > r2:
    print('As retas citadas formam um triângulo')
    if r1 == r2 == r3:
        print('O triângulo em questão, é do tipo EQUILÁTERO')
    elif r1 != r2 != r3 != r1:
        print('O triângulo em questão, é do tipo ESCALENO')
    else:
        print('O triângulo em questão, é do tipo ISÓSCELES')

else:
    print('As retas citadas NÃO formam um triângulo')

